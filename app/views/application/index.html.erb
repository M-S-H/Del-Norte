<script>
	$(document).ready(function() {
		if (sessionStorage.getItem('popup:seen')) {
			document.getElementById('popup').remove();
			popup.parentElement.remove(popup);
		}

		setTimeout(function() {
			$('.popup-wrapper').addClass('visible');

			sessionStorage.setItem('popup:seen', true);

			setTimeout(function() {
				$('.popup-wrapper').addClass('shown');
			}, 100);
		}, 100);

		$('.close-popup').click(function() {
			$('.popup-wrapper').removeClass('shown');
			setTimeout(function() {
				// $('.popup-wrapper').removeClass('visible');
				document.getElementById('popup').remove();
				// popup.parentElement.remove(popup);
			}, 200)
		})
	})
</script>